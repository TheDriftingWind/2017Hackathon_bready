<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="charleszhu.qunnipiac.edu.a2017hackathon.MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
        android:id="@+id/searchText"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Search your situation" />

        <Button
        android:id="@+id/searchBtn"
        android:layout_gravity="right"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="searchAction" />
    </LinearLayout>

    <Button
        android:id="@+id/PoliceButton"
        android:layout_width="fill_parent"
        android:layout_height="130sp"
        android:onClick="onClick"
        android:textSize="32sp"
        android:text="@string/Police"
        android:textAlignment="viewEnd"
        android:background="@drawable/icon_police"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingRight="20sp"
        />

    <Button
        android:id="@+id/FireButton"
        android:layout_width="fill_parent"
        android:layout_height="130sp"
        android:onClick="onClick"
        android:textSize="32sp"
        android:text="@string/Fire"

        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:background="@drawable/icon_fire"
        android:textAlignment="viewEnd"
        android:paddingRight="20sp"
        />

    <Button
        android:id="@+id/MedicalButton"
        android:layout_width="fill_parent"
        android:layout_height="130sp"
        android:onClick="onClick"
        android:textSize="32sp"
        android:text="@string/Medical"

        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:background="@drawable/icon_medical"
        android:textAlignment="viewEnd"
        android:paddingRight="20sp"
        />


</LinearLayout>
